@model ProjectManagementPlatform.Application.Commands.AssignTaskCommand

<h2>Assign Task</h2>

<form asp-action="AssignTask">
    <div class="form-group">
        <label asp-for="TaskId" class="control-label"></label>
        <input asp-for="TaskId" class="form-control" />
        <span asp-validation-for="TaskId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AssignedToUserId" class="control-label"></label>
        <input asp-for="AssignedToUserId" class="form-control" />
        <span asp-validation-for="AssignedToUserId" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <input type="submit" value="Assign" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>